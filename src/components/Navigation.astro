<nav class="navbar">
  <div class="container">
    <div class="nav-content">
      <div class="logo">
        <a href="#home">
          <span class="logo-icon">⚙</span>
          <span class="logo-text">Schraubenkönig Dresden</span>
        </a>
      </div>
      <ul class="nav-links">
        <li><a href="#home">Home</a></li>
        <li><a href="#produkte">Produkte</a></li>
